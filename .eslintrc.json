{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "plugins": ["@typescript-eslint"],
  "overrides": [
    {
      "files": [
        "src/**/*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-namespace": "off"
      }
    },
    {
      "files": [
        "src/**/__test__/**/*.ts"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}
